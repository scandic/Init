<?xml version="1.0"?>

<config>

    <tabs>
        <inittab translate="label">
            <label>Pushkarcreations Init</label>
            <sort_order>100</sort_order>
        </inittab>
    </tabs>
    <sections>
        <initsection>
            <label>Theme Settings</label>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <tab>inittab</tab>
            <groups>
                <initgroup translate="label">
                    <label>Init settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <theme translate="label comment">
                            <label>Init settings</label>
                            <comment>Override some default settings</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                        </theme>
                    </fields>
                </initgroup>
                <initsocial translate="label">
                    <label>Social Links</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>2</show_in_default>
                    <show_in_website>2</show_in_website>
                    <show_in_store>2</show_in_store>
                    <fields>
                        <enable_twitter_timeline translate="label comment">
                            <label>Twitter Timeline username</label>
                            <comment>Show latest tweets in footer</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                        </enable_twitter_timeline>
                        <twitter_timeline translate="label comment">
                            <label>Twitter Timeline username</label>
                            <comment>Enter your username of tweeter account.( Ex.- mukkundthanki )</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>2</show_in_default>
                        </twitter_timeline>
                    </fields>
                </initsocial>
            </groups>
        </initsection>
    </sections>

</config>



